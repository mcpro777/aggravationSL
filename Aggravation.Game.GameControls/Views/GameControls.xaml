    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot">
        <Canvas x:Name="ControlsPanel" Height="59" Width="99">
            <Button x:Name="btnReset" Content="Reset Game" Height="22" Canvas.Left="3" Canvas.Top="37" Width="96"/>
            <Button x:Name="btnInstructions" Content="Instructions" Height="25" Width="99"/>
        </Canvas>
    </Grid>
</UserControl>
